    "concurrently": "^6.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.13",
    "peer": "^0.6.1",
    "socket.io": "^3.1.2",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0"
  }
